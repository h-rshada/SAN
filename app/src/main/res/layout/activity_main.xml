<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817e7d"
    tools:context="com.example.android.san.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="?attr/colorPrimary"
            android:titleTextColor="#ffff">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
                android:src="@drawable/leftarrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="SAN"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/activity_general_margin">


            <EditText
                android:id="@+id/updateNameEdittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:background="@drawable/editextet_of_reg"
                android:hint="Add name"
                android:inputType="text"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#fff" />


            <EditText
                android:id="@+id/updateEmailEdittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:background="@drawable/editextet_of_reg"
                android:hint="Add email"
                android:inputType="textEmailAddress"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/updateAddressEdittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:background="@drawable/editextet_of_reg"
                android:hint="Add address"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#fff" />


            <EditText
                android:id="@+id/updatePhoneEdittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:background="@drawable/editextet_of_reg"
                android:hint="Add Phone"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#fff" />


            <!--<Button-->
            <!--android:id="@+id/editButton"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:background="@android:color/white"-->
            <!--android:enabled="true"-->
            <!--android:padding="@dimen/activity_general_margin"-->
            <!--android:text="@string/save" />-->

            <Button
                android:id="@+id/editButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/place_order_bt_shape"
                android:enabled="true"
                android:padding="@dimen/activity_general_margin"
                android:text="save"
                android:textColor="#0b0b0b"
                android:textSize="18dp"
                android:textStyle="bold" />
            <!--
                    <Button
                        android:id="@+id/cancelEditionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/activity_general_margin"
                        android:background="@android:color/white"
                        android:padding="@dimen/activity_general_margin"
                        android:text="@string/cancel"
                        />-->


            <Button
                android:id="@+id/login_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_general_margin"
                android:background="@android:color/white"
                android:padding="@dimen/activity_general_margin"
                android:text="@string/login_again"
                android:textColor="@color/blue_text"
                android:visibility="gone" />

            <Button
                android:id="@+id/refreshTokenButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLogo"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:padding="@dimen/activity_general_margin"
                android:text="@string/refresh"
                android:textColor="@color/blue_text"
                android:visibility="gone" />

            <Button
                android:id="@+id/logout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refreshTokenButton"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_general_margin"
                android:background="@android:color/white"
                android:padding="@dimen/activity_general_margin"
                android:text="@string/logout"
                android:textColor="@color/blue_text"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
