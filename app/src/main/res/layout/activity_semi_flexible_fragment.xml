<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.san.Fragment.SemiFlexibleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/food1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/food4" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardBasic"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/style1">
                    <TextView
                        android:id="@+id/txtTiffinType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:text="Basic Dabba"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="30dp"
                            android:src="@drawable/heavydabba" />
                    </LinearLayout>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center">

                        <TableRow
                            android:id="@+id/tr_header"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_bg"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                android:text="TYPE"
                                android:textColor="#000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Quantity"
                                android:textColor="#000"
                                android:textStyle="bold">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header1"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chapati"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>

                        <TableRow
                            android:id="@+id/tr_header2"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rice"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header3"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dal"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header4"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Subjii/Bhaji"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:id="@+id/txtDabbaDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher"
                        android:text="@string/BasicDesc"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_marginTop="135dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f4a9d8"
                        android:textSize="20dp"
                        android:text="Rs 120"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardHeavy"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/style1">
                    <TextView
                        android:id="@+id/txtTiffinType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heavy Dabba"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="30dp"
                            android:src="@drawable/heavydabba" />
                    </LinearLayout>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center">

                        <TableRow
                            android:id="@+id/tr_header12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_row_bg"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_product12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                android:text="TYPE"
                                android:textColor="#000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_author12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Quantity"
                                android:textColor="#000"
                                android:textStyle="bold">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header13"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chapati"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>

                        <TableRow
                            android:id="@+id/tr_header14"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rice"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header15"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dal"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tr_header16"
                            android:background="@drawable/table_row_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tv_product16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 Subjii/Bhaji"
                                android:background="@drawable/table_cell_bg"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_author16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150gm"
                                android:background="@drawable/table_cell_bg"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                            </TextView>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:id="@+id/txtDabbaDesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        android:text="@string/HeavyDesc"
                        android:layout_marginTop="200dp"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtprice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="135dp"
                        android:background="#f4a9d8"
                        android:gravity="center"
                        android:text="Rs 150"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
