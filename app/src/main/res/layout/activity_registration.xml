<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.san.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_image="@drawable/rice"
            app:mtf_labelColor="#666">

            <EditText
                android:id="@+id/updateNameEdittext"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:hint="User name"
                android:textColor="#000" />
        </com.github.florent37.materialtextfield.MaterialTextField>


        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_image="@drawable/rice"
            app:mtf_labelColor="#666">


            <EditText
                android:id="@+id/updateEmailEdittext"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:hint="Password" />

        </com.github.florent37.materialtextfield.MaterialTextField>


        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_image="@drawable/rice"
            app:mtf_labelColor="#666">

            <EditText
                android:id="@+id/updateAddressEdittext"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:hint="Address" />
        </com.github.florent37.materialtextfield.MaterialTextField>


        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_image="@drawable/rice"
            app:mtf_labelColor="#666">

            <EditText
                android:id="@+id/updatePhoneEdittext"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_general_margin"
                android:hint="Phone" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <Button
            android:id="@+id/editButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/place_order_bt_shape"
            android:enabled="true"
            android:padding="@dimen/activity_general_margin"
            android:text="Register"
            android:textColor="#0b0b0b"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
